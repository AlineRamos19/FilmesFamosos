<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_favorite"
        android:layout_width="170dp"
        android:layout_height="260dp"
        android:src="@drawable/popcorn_icon" />

    <TextView
        android:id="@+id/title_movie_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_margin_eight"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Bird Box" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin_eight"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_movie_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin_eight"
            android:layout_marginLeft="@dimen/medium_margin_eight"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            tools:text="2018" />

        <TextView
            android:id="@+id/vote_movie_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_margin_eight"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@android:color/white"
            tools:text="7.8"
            android:layout_marginRight="@dimen/medium_margin_eight" />

    </LinearLayout>


</LinearLayout>